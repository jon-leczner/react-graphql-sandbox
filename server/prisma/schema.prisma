generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ToDo {
  id          Int      @id @default(autoincrement())
  dueDate   DateTime @default(now())
  description String
  postedById  Int
  postedBy    User     @relation(fields: [postedById], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  links    ToDo[]
}
